<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- TOP BAR -->
    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar"/>

    <!-- CONTENIDO CENTRAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBar"
        android:layout_below="@id/topBar"
        android:background="@color/negro_fondo"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER EQUIPO -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <!-- Imagen de fondo -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fondo" />

                <!-- Contenido encima del fondo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <!-- Logo o imagen principal -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:background="@drawable/ic_launcher_foreground" />

                    <!-- Nombre del equipo -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EQUIPO 1"
                        android:textSize="20sp"
                        android:textColor="@color/blanco"
                        android:layout_marginTop="8dp" />

                    <!-- Información adicional: ciudad y entrenador -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <!-- Ciudad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ciudad"
                                android:textStyle="bold"
                                android:textColor="@color/gris_texto" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zaragoza"
                                android:textColor="@color/blanco" />
                        </LinearLayout>

                        <!-- Entrenador -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Entrenador"
                                android:textStyle="bold"
                                android:textColor="@color/gris_texto" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jose Carlos"
                                android:textColor="@color/blanco" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- TABS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/negro_secciones"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabNoticias"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Noticias"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tabPartidos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Partidos"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tabJugadores"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Jugadores"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tabClasificacion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Clasificación"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- CONTENIDOS -->
            <LinearLayout
                android:id="@+id/contentNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">

                <!-- NEWS ITEM -->
                <LinearLayout
                    android:id="@+id/newsItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/negro_secciones"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:text="Lorem ipsum dolor sit amet et delectus accommodare his" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#DDDDDD"
                        android:src="@android:drawable/ic_menu_gallery" />
                </LinearLayout>

                <!-- NEWS ITEM -->
                <LinearLayout
                    android:id="@+id/newsItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/negro_secciones"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:text="Lorem ipsum dolor sit amet et delectus accommodare his" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#DDDDDD"
                        android:src="@android:drawable/ic_menu_gallery" />
                </LinearLayout>

                <!-- NEWS ITEM -->
                <LinearLayout
                    android:id="@+id/newsItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/negro_secciones"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:text="Lorem ipsum dolor sit amet et delectus accommodare his" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#DDDDDD"
                        android:src="@android:drawable/ic_menu_gallery" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentPartidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Contenido de partidos" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentJugadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Contenido de jugadores" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentClasificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Contenido de clasificación" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"/>

</RelativeLayout>
