<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro_fondo">

    <!-- TOP BAR -->
    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar"/>

    <!-- HEADER DE JUEGO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/topBar"
        android:background="@color/negro_secciones"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="30dp"
                android:background="#555"
                android:src="@android:drawable/ic_menu_gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="21:00"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#555"
                android:src="@android:drawable/ic_menu_gallery"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="110dp"
                android:text="Equipo 1"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo 2"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- TÍTULO ALINEACIÓN -->
    <TextView
        android:id="@+id/tituloAlineacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALINEACIÓN"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_below="@id/header"/>

    <!-- SELECTOR EQUIPOS -->
    <LinearLayout
        android:id="@+id/selectorEquipos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloAlineacion"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/negro_fondo">

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Equipo 1"
            android:textAllCaps="false"
            android:background="@drawable/borde"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Equipo 2"
            android:textAllCaps="false"
            android:background="@drawable/borde"
            android:backgroundTint="@color/gris_texto"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- SCROLLVIEW DE JUGADORES -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectorEquipos"
        android:layout_marginBottom="85dp"
        android:background="@color/negro_fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- JUGADOR 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/negro_secciones"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/seleccion_j1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_launcher_foreground"/>

                <TextView
                    android:text="9"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Manuel Herrera"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="DEL"
                    android:textAllCaps="false"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gris_texto"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- JUGADOR 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/negro_secciones"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/seleccion_j2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_launcher_foreground"/>

                <TextView
                    android:text="7"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Lucas Romero"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="MED"
                    android:textAllCaps="false"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gris_texto"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- JUGADOR 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/negro_secciones"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/seleccion_j3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_launcher_foreground"/>

                <TextView
                    android:text="3"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Diego Fernández"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="DEF"
                    android:textAllCaps="false"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gris_texto"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- JUGADOR 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/negro_secciones">

                <ImageView
                    android:id="@+id/seleccion_j4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_launcher_foreground"/>

                <TextView
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Pablo Salas"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="POR"
                    android:textAllCaps="false"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:background="@color/gris_texto"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"/>

    <!-- Menus y overlay -->
    <include
        layout="@layout/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/menu_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/menu_user"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
