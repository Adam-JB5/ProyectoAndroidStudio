<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBar"
        android:layout_below="@id/topBar"
        android:background="@color/negro_fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="CREAR NOTICIA"
                android:textColor="@color/blanco"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blanco"
                android:hint="Título de la noticia"
                android:inputType="textCapSentences"
                android:maxLength="100"
                android:textColor="@color/blanco"
                android:textColorHint="#999999"
                android:textSize="24sp"
                android:autofillHints="titulo"/>

            <FrameLayout
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_dashed">

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:contentDescription="Preview de imagen"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Toca para subir imagen"
                    android:textColor="@color/blanco"
                    android:textStyle="italic" />
            </FrameLayout>

            <EditText
                android:id="@+id/etSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/blanco"
                android:hint="Subtítulo (opcional)"
                android:inputType="textCapSentences"
                android:maxLength="200"
                android:textColor="@color/blanco"
                android:textColorHint="#999999" />

            <EditText
                android:id="@+id/etContenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/blanco"
                android:gravity="top"
                android:hint="Escribe el contenido de la noticia aquí..."
                android:inputType="textMultiLine"
                android:lines="6"
                android:minLines="4"
                android:textColor="@color/blanco"
                android:textColorHint="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Selecciona el equipo:"
                android:textColor="@color/blanco" />

            <Spinner
                android:id="@+id/spinnerEquipos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/blanco"
                android:padding="10dp"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/btnPublicar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#FFCC00"
                android:text="PUBLICAR NOTICIA"
                android:textColor="@color/negro_fondo"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <include
        layout="@layout/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/menu_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent" />

    <include
        layout="@layout/menu_user"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />

</RelativeLayout>