<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/negro_secciones"
    android:layout_marginBottom="8dp">

    <!-- FOTO PERFIL -->
    <ImageView
        android:id="@+id/imgPerfilComentario"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/user"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="#666666"
        android:contentDescription="Foto de perfil"/>

    <!-- CONTENIDO DEL COMENTARIO -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- NOMBRE + FECHA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUsuarioComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtFechaComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2025"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- CONTENIDO -->
        <TextView
            android:id="@+id/txtContenidoComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido del comentario..."
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</LinearLayout>
