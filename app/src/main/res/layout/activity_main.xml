<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- TOP BAR -->
    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar"/>

    <!-- CONTENT -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar"
        android:background="@color/negro_fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- PARTIDOS HORIZONTALES -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPartido1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@color/negro_secciones"
                        android:text="Partido"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnPartido2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@color/negro_secciones"
                        android:text="Partido"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnPartido3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@color/negro_secciones"
                        android:text="Partido"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtNoticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTICIAS"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <!-- NEWS ITEM -->
            <LinearLayout
                android:id="@+id/newsItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/negro_secciones"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:text="Lorem ipsum dolor sit amet et delectus accommodare his"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#DDDDDD"/>
            </LinearLayout>

            <!-- NEWS ITEM -->
            <LinearLayout
                android:id="@+id/newsItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/negro_secciones"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:text="Lorem ipsum dolor sit amet et delectus accommodare his"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#DDDDDD"/>
            </LinearLayout>

            <!-- NEWS ITEM -->
            <LinearLayout
                android:id="@+id/newsItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/negro_secciones"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:text="Lorem ipsum dolor sit amet et delectus accommodare his"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="#DDDDDD"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"/>


</RelativeLayout>
