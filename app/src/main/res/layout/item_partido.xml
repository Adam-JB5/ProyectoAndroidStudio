<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:background="@color/negro_secciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@color/negro_secciones">

        <!-- Equipo Local -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgEquipoLocal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/team"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtEquipoLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo Local"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <!-- VS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vs"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginHorizontal="12dp"/>

        <!-- Equipo Visitante -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgEquipoVisitante"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/team"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txtEquipoVisitante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo Visitante"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <!-- Hora partido -->
        <TextView
            android:id="@+id/txtHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:00"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
