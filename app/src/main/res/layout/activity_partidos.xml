<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- TOP BAR -->
    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar"/>

    <!-- FILTROS HORIZONTALES -->
    <HorizontalScrollView
        android:id="@+id/filtrosScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/filtrosLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Botones de filtros -->
            <Button android:id="@+id/btnTodos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Todos" android:layout_marginEnd="8dp"/>
            <Button android:id="@+id/btnBarcelona" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Barcelona" android:layout_marginEnd="8dp"/>
            <Button android:id="@+id/btnAtMadrid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="At. Madrid" android:layout_marginEnd="8dp"/>
            <Button android:id="@+id/btnRacing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Racing"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filtrosScroll"
        android:layout_above="@id/bottomBar"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EQUIPOS SEGUIDOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipos seguidos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEquiposSeguidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- TODOS LOS PARTIDOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos los partidos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTodosPartidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"/>
</RelativeLayout>
