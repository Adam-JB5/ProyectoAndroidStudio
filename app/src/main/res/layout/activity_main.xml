<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- TOP BAR -->
    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- CONTENT -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar"
        android:background="@color/negro_fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- PARTIDOS HORIZONTALES -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/contenedorPartidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/partido1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp">
                        <include layout="@layout/item_partido"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/partido2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <include layout="@layout/item_partido"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/partido3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <include layout="@layout/item_partido"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtNoticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTICIAS"
                android:textSize="22sp"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <!-- CONTENEDOR DE NOTICIAS -->
            <LinearLayout
                android:id="@+id/contenedorNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_noticia"/>
                <include layout="@layout/item_noticia"/>
                <include layout="@layout/item_noticia"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <!-- Menus y overlay -->
    <include
        layout="@layout/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/menu_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"/>

    <include
        layout="@layout/menu_user"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
