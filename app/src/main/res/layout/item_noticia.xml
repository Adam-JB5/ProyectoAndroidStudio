<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/negro_secciones"
    android:layout_marginTop="8dp">

    <!-- Texto de la noticia -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Título: máximo 1 línea -->
        <TextView
            android:id="@+id/txtTituloNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la noticia"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"/>

        <!-- Subtítulo: máximo 3 líneas -->
        <TextView
            android:id="@+id/txtSubtituloNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtítulo o descripción breve"
            android:textColor="@color/gris_texto"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"/>
    </LinearLayout>

    <!-- Imagen de la noticia + fecha -->
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgNoticia"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#555"/>

        <TextView
            android:id="@+id/txtFechaNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2025"
            android:textColor="@color/gris_texto"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
